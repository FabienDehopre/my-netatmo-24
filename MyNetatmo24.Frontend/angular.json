{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "cli": {
    "packageManager": "pnpm"
  },
  "newProjectRoot": "projects",
  "projects": {
    "frontend-app": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "inlineStyle": true
        }
      },
      "root": "projects/frontend-app",
      "sourceRoot": "projects/frontend-app/src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular/build:application",
          "options": {
            "outputPath": "dist/frontend-app",
            "index": "projects/frontend-app/src/index.html",
            "browser": "projects/frontend-app/src/main.ts",
            "tsConfig": "projects/frontend-app/tsconfig.app.json",
            "assets": [
              {
                "glob": "**/*",
                "input": "projects/frontend-app/public"
              }
            ],
            "styles": [
              "projects/frontend-app/src/styles.css"
            ]
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "750kB",
                  "maximumError": "1MB"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "4kB",
                  "maximumError": "8kB"
                }
              ],
              "outputHashing": "all"
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular/build:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "frontend-app:build:production"
            },
            "development": {
              "buildTarget": "frontend-app:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "test": {
          "builder": "@angular/build:unit-test",
          "options": {
            "providersFile": "projects/frontend-app/src/test-providers.ts",
            "runnerConfig": "projects/frontend-app/vitest.config.ts"
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": [
              "projects/frontend-app/**/*.ts",
              "projects/frontend-app/**/*.html",
              "projects/frontend-app/**/*.css",
              "projects/frontend-app/**/*.json"
            ],
            "eslintConfig": "projects/frontend-app/eslint.config.mjs"
          }
        }
      }
    },
    "opentelemetry-lib": {
      "projectType": "library",
      "root": "projects/opentelemetry-lib",
      "sourceRoot": "projects/opentelemetry-lib/src",
      "prefix": "lib",
      "architect": {
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": ["projects/opentelemetry-lib/**/*.ts", "projects/opentelemetry-lib/**/*.html"],
            "eslintConfig": "projects/opentelemetry-lib/eslint.config.mjs"
          }
        }
      }
    }
  }
}
